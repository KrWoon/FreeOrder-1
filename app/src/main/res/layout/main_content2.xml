<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="org.androidtown.signupdemo.Main"
    tools:showIn="@layout/main_content1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/advertisement"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp" />

        <LinearLayout
            android:id="@+id/gg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/showallfood"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="#00000000"
                    android:scaleType="fitCenter"
                    android:src="@drawable/google" />

                <ImageButton
                    android:id="@+id/chicken"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="#00000000"
                    android:scaleType="fitCenter"
                    android:src="@drawable/google" />

                <ImageButton
                    android:id="@+id/koreanfood"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="#00000000"
                    android:scaleType="fitCenter"
                    android:src="@drawable/google" />
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/chinesefood"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="#00000000"
                    android:scaleType="fitCenter"
                    android:src="@drawable/google" />

                <ImageButton
                    android:id="@+id/pizza"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="#00000000"
                    android:scaleType="fitCenter"
                    android:src="@drawable/google" />

                <ImageButton
                    android:id="@+id/schoolfood"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="#00000000"
                    android:scaleType="fitCenter"
                    android:src="@drawable/google" />
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/japanesefood"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="#00000000"
                    android:scaleType="fitCenter"
                    android:src="@drawable/google" />

                <ImageButton
                    android:id="@+id/jokbalbossam"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="#00000000"
                    android:scaleType="fitCenter"
                    android:src="@drawable/google" />

                <ImageButton
                    android:id="@+id/etc"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="#00000000"
                    android:scaleType="fitCenter"
                    android:src="@drawable/google" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
